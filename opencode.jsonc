{
  "$schema": "https://opencode.ai/config.json",

  // 1) Auto-update
  "autoupdate": false,

  // 2) Theme
  "theme": "tokyonight",

  // 3) Default model (provider_id/model_id)
  "model": "google/gemini-3-pro-preview",

  // 4) Default "thinking" = High (set model options globally)
  "provider": {
    "google": {
      "models": {
        "gemini-3-pro-preview": {
          "options": {
            "reasoningEffort": "high"
          }
        }
      }
    }
  },

  // 5) Set all tools to allow (explicitly)
  "permission": {
    "bash": "allow",
    "edit": "allow",
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "patch": "allow",
    "webfetch": "allow",
    "skill": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "question": "allow",

    // allow any MCP server tools too (wildcard)
    "*_*": "allow"
  }
}
