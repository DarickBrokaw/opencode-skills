{
  "$schema": "https://opencode.ai/schema.json",
  "name": "skill-retrospective-learner",
  "version": "1.0.0",
  "description": "Learning and retrospective skill for capturing lessons learned",
  "permissions": {
    "bash": {
      "default": "allow"
    },
    "edit": {
      "default": "allow"
    },
    "glob": {
      "default": "allow"
    },
    "grep": {
      "default": "allow"
    },
    "read": {
      "default": "allow"
    },
    "write": {
      "default": "allow"
    },
    "webfetch": {
      "default": "deny"
    }
  }
}
