{
  "$schema": "https://opencode.ai/schema.json",
  "name": "ralph-loop",
  "version": "1.0.0",
  "description": "Ralph-Wiggum Loop Orchestrator - Run OpenCode in repeatable iterations until completion",
  "permissions": {
    "bash": {
      "default": "allow"
    },
    "edit": {
      "default": "allow"
    },
    "glob": {
      "default": "allow"
    },
    "grep": {
      "default": "allow"
    },
    "read": {
      "default": "allow"
    },
    "write": {
      "default": "allow"
    },
    "webfetch": {
      "default": "deny"
    }
  }
}
