{
  "$schema": "https://opencode.ai/schema.json",
  "name": "retrospective-plugin",
  "version": "1.0.0",
  "description": "Auto-captures lessons learned from failures and updates documentation",
  "permissions": {
    "bash": {
      "default": "allow"
    },
    "edit": {
      "default": "allow"
    },
    "glob": {
      "default": "allow"
    },
    "grep": {
      "default": "allow"
    },
    "read": {
      "default": "allow"
    },
    "write": {
      "default": "allow"
    },
    "webfetch": {
      "default": "deny"
    }
  }
}
